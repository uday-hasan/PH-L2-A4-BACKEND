model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  userType  USERTYPE
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  status    STATUS     @default(ACTIVE)
  address   Address[]
  cart      Cart?
  medicine  Medicine[]
  orders    Order[]    @relation("CustomerOrders")
  reviews   Review[]
}

enum USERTYPE {
  ADMIN
  CUSTOMER
  SELLER
}
