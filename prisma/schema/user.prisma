enum USERTYPE {
    ADMIN
    CUSTOMER
    SELLER
}

model User {
    id        String     @id @default(uuid())
    name      String
    email     String     @unique
    password  String
    userType  USERTYPE
    address   Address[]
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    medicine  Medicine[]
    status    STATUS     @default(ACTIVE)
    orders    Order[]    @relation("CustomerOrders")
    reviews   Review[]
    cart      Cart?
}
